<div class="bg_header">
    <div class="container">
        <div class="header">
            <div class="col-sm-6">
                <h1 class="title"><a href="{{ path_for('homepage') }}">Matcha</a></h1>
            </div>
        </div>
    </div>
</div>
{% if app.isLogged and app.isLocated %}
    <div id="isLocated" class="hidden">{{ app.isLocated }}</div>
    <nav class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
            <li class="active"><a href="{{ path_for('homepage') }}">Home</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path_for('edit', { 'profil': 'basic' }) }}"><i class="fa fa-user" aria-hidden="true"></i> My profil</a></li>
                    <li><a href="{{ path_for('chat') }}"><i class="fa fa-comments-o" aria-hidden="true"></i> Chat</a></li>
                    <li class="dropdown-submenu">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-bell" aria-hidden="true"></i> Notifications(<span id="unread">{{ app.getCountUnreadNotif }}</span>)
                            <ul id="notifications" class="dropdown-menu">
                                <li><a href="{{ path_for('notif') }}">All Notifications</a></li>
                                <div class="notifications menu-notifications">
                                </div>
                                <li><a href="{{ path_for('notif') }}" class="read-all">Mark all as read</a></li>
                            </ul>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
        <form class="navbar-form navbar-left" method="get" action="/search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="terms" value="{{ data }}">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
                <a href="/search">Search</a>
            </div>
        </form>
        <ul class="nav navbar-nav">
            <li><a href="{{ path_for('mapLocation') }}" class="btn"><i class="fa fa-globe fa-2x" aria-hidden="true"></i></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ path_for('logout') }}" class="btn logout"><i class="fa fa-sign-out fa-2x" aria-hidden="true"></i></a></li>
        </ul>
    </nav>
    {% include 'views/fragments/_message.html.twig' %}
{% else %}
<div class="subheader">
    <div class="container">
        <div class="form-con col-xs-12">
            <form class="form-inline" method="POST" action="{{ path_for('signInForm') }}">
                <div class="col-xs-12 col-sm-5 nopadding form-group">
                    <label class="sr-only" for="exampleInputEmail3">Email address</label>
                    <input type="mail" name="mail" class="col-xs-12 form-control" id="exampleInputEmail3"
                           placeholder="Email">
                </div>
                <div class="col-xs-12 col-sm-5 nopadding form-group passwordInput">
                    <label class="sr-only" for="exampleInputPassword3">Password</label>
                    <input type="password" name="password" class="col-xs-12 form-control" id="exampleInputPassword3"
                           placeholder="Password">
                </div>
                <div class="col-xs-12 col-sm-2 submitinput form-group">
                    <button id="signIn" type="submit" class="col-xs-12 btn btn-default">OK</button>
                </div>
            </form>
            <p class="col-xs-12 col-sm-5 forget"><a href="{{ path_for('forgotPassword') }}">forgot password ?</a></p>
            <p class="col-xs-12 col-sm-5 forget"><a href="{{ path_for('signUp') }}">Inscription ?</a></p>
        </div>
    </div>
    {% include 'views/fragments/_message.html.twig' %}
</div>
{% endif %}