{% extends "views/base/base.html.twig" %}

{% block body %}
    <div class="container main-container">
        <div class="toAdopt">
            <h2 class="line"><span>Forgot Password</span></h2>
            <div class="row  form form-register">
                <form class="form-inline col-xs-12 col-sm-12" method="post" action="{{ path_for('resetPassword') }}" >

                    <div class="form-group col-xs-12 col-sm-offset-2 col-sm-8">
                        <label class="col-xs-3 col-sm-3" for="passwd">Password</label>
                        <input class="col-xs-9 col-sm-9" type="password" id="password" name="password" placeholder="Your new password" required>
                        {% if error.password %}
                            <div class="col-xs-12 alert alert-danger">
                                {% for message in error.password %}
                                    {{ message }} <br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group col-xs-12 col-sm-offset-2 col-sm-8">
                        <label class="col-xs-3 col-sm-3" for="passwd">Confirm</label>
                        <input class="col-xs-9 col-sm-9" type="password" id="password2" name="password2" placeholder="Confirm your password" required>
                        {% if error.password %}
                            <div class="col-xs-12 alert alert-danger">
                                {% for message in error.password %}
                                    {{ message }} <br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    <input class="hidden" name="id" value="{{ data.id }}">
                    <input class="hidden" name="key" value="{{ data.token }}">

                    <button type="submit" class="col-xs-12 col-sm-offset-4 col-sm-4 btn btn-default">Send</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}