{% block body %}
    <div class="notifications page-notification">
        {% for notif in app.getLastNotifications  %}
            <div class="last-notification hidden">
                <span class="hidden">{{ notif.type }}</span>
                <li data-id="{{ notif.idNotif }}"><a href="{{ notif.link }}" ><img width=50 height=50 src="{{ notif.url }}" alt="">{{ notif.lastname }} : {{ notif.message }}</a> at {{ notif.dateNotif }}</li>
            </div>
        {% endfor %}
        {% for notif in app.getNotifications  %}
            <div class="notification">
                <span class="hidden">{{ notif.type }}</span>
                <li {% if notif.reading == 0 %}class="unread" {% endif %} data-id="{{ notif.idNotif }}"><a href="{{ notif.link }}" ><img width=50 height=50 src="{{ notif.url }}" alt="">{{ notif.lastname }} : {{ notif.message }}</a> at {{ notif.dateNotif }}</li>
            </div>
        {% endfor %}
    </div>
    <script type="text/javascript" src="/js/mustache.js"></script>
    <script type="text/javascript" src="/js/jquery.notif.js"></script>
{% endblock %}