<div class="notifications page-notification">
    {% for notif in app.getLastNotifications  %}
        <div class="last-notification hidden">
            <span class="hidden">{{ notif.type }}</span>
            <li data-type="{{ notif.type }}" data-id="{{ notif.idNotif }}"><a href="{{ notif.link }}" ><img width=50 height=50 src="{{ notif.url }}" alt="">{{ notif.lastname }} : {{ notif.message }}</a> at {{ notif.dateNotif }}</li>
        </div>
    {% endfor %}
    <li><a href="{{ path_for('notif') }}">All Notifications</a></li>
    {% for notif in app.getUnreadNotifications  %}
        <div class="notification">
            <span class="hidden">{{ notif.type }}</span>
            <li {% if notif.reading == 0 %}class="unread" {% endif %} data-type="{{ notif.type }}" data-id="{{ notif.idNotif }}"><a href="{{ notif.link }}" ><img width=50 height=50 src="{{ notif.url }}" alt="">{{ notif.lastname }} : {{ notif.message }}</a> at {{ notif.dateNotif }}</li>
        </div>
    {% endfor %}
    <li><a href="{{ path_for('notif') }}" class="read-all">Mark all as read</a></li>
</div>