{% extends "views/base/base.html.twig" %}

{% block body %}
    <div class="sidebar">
    {% include '/views/users/fragments/_sidebar.html.twig' %}
    </div>
    <h1>Manage photo</h1>
    <form class="form-horizontal" method="post" action="{{ path_for('edit', { 'profil': 'photo' }) }}" enctype="multipart/form-data">
        <div class="panel panel-heading">
            <label class="control-label">Public photo</label>
            <input type="hidden" name="MAX_FILE_SIZE" value="5000000">
            <input id="photoUser" name="photoUser" type="file" accept="image/jpg, image/jpeg, image/bmp, image/png">
        </div>
        <input type="submit" class="btn btn-success" value="Save change">
    </form>
    {% if flash.message('error').0 %}
        <div class="alert alert-danger">
            {{ flash.getMessage('error').0 }}
        </div>
    {% endif %}
{% endblock %}